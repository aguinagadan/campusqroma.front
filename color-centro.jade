                        h6.text-tercery Tu OnBoarding
                        .subtitle.text-cuart 2 CURSOS
                    .item.bg-primary-o.text-center
                        .img(style="background:url(./img/pintura-2.jpg)")
                        h6.text-tercery Seguridad
                        .subtitle.text-cuart 2 CURSOS
                    .item.bg-primary-o.text-center
                        .img(style="background:url(./img/pintura-2.jpg)")
                        h6.text-tercery Cursos de clientes
                        .subtitle.text-cuart 2 CURSOS
            footer.color
                .w70
                    .menus.w75
                        .site-map.w33
                            h3 MAPA DEL AULA VIRTUAL
                            ul
                                li
                                    a(href="#") HOME
                                li
                                    a(href="#") CATÁLOGO
                                li.active
                                    a(href="#") QROMOTECA
                                li
                                    a(href="#") TIENDA
                        .site-map.w33
                            h3 MI PERFIL
                            ul
                                li
                                    a(href="#") MI DASHBOARD
